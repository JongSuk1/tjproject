<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.kakao.mybt.MainActivity">

    <TextView
        android:id="@+id/on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="onBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="offBtn"
        app:layout_constraintStart_toEndOf="@+id/on"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PairedBtn"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginBottom="300dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mk"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/mk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="dk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on" />

    <TextView
        android:id="@+id/text"
        android:layout_width="116dp"
        android:layout_height="51dp"
        android:layout_marginLeft="16dp"
        android:text="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/devicesListView"
        android:layout_width="166dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bluetoothStatus"
        android:layout_width="123dp"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:text="bluetoothStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PairedBtn" />


    <TextView
        android:id="@+id/readBuffer"
        android:layout_width="168dp"
        android:layout_height="31dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:text="readBuffer"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text"
        app:layout_constraintTop_toBottomOf="@+id/checkboxTimelapse" />

    <Button
        android:id="@+id/captureBtn"
        android:layout_width="215dp"
        android:layout_height="81dp"
        android:layout_marginTop="14dp"
        android:text="capture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <CheckBox
        android:id="@+id/checkboxCam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="cam on/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/devicesListView" />

    <TextView
        android:id="@+id/discoverBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="16dp"
        android:text="discoverBtn"
        app:layout_constraintStart_toEndOf="@+id/mk"
        app:layout_constraintTop_toBottomOf="@+id/off" />

    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="47dp"
        android:layout_marginTop="16dp"
        android:text="EXIT"
        app:layout_constraintEnd_toStartOf="@+id/checkboxCam"
        app:layout_constraintTop_toBottomOf="@+id/devicesListView" />

    <CheckBox
        android:id="@+id/checkboxTimelapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="timelapse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkboxCam" />

    <SeekBar
        android:id="@+id/seekBarCameraPeriod"
        android:layout_width="235dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"

        android:layout_marginTop="28dp"
        android:max="10"
        android:progress="5"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/checkboxTimelapse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bluetoothStatus" />

    <Button
        android:id="@+id/showFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="28dp"
        android:text="Feed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/photo_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ryan" />

</android.support.constraint.ConstraintLayout>
